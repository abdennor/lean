{
    "name": "jenssegers/lean",
    "description": "Use the league/container with auto-wiring support as the core container in Slim 3",
    "keywords": [
        "league",
        "slim",
        "container"
    ],
    "homepage": "https://github.com/jenssegers/lean",
    "license": "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://jenssegers.com"
        }
    ],
    "require": {
        "php" : ">=5.5",
        "slim/slim": "^3.0",
        "league/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^4.0|^5.0",
        "mockery/mockery": "^0.9",
        "satooshi/php-coveralls": "^0.6"
    },
    "autoload": {
        "psr-4": {
            "Jenssegers\\Lean\\": "src/Lean",
            "Slim\\": "src/Slim"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
