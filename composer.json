{
    "name": "jenssegers/lean",
    "description": "Use the league/container with auto-wiring support as the core container in Slim 3",
    "keywords": [
        "league",
        "slim",
        "container"
    ],
    "homepage": "https://github.com/jenssegers/lean",
    "license": "MIT",
    "authors": [
        {
            "name": "Jens Segers",
            "homepage": "https://jenssegers.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.0",
        "league/container": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0",
        "satooshi/php-coveralls": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Jenssegers\\Lean\\": "src/Lean",
            "Slim\\": "src/Slim"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jenssegers\\Lean\\Tests\\": "tests"
        }
    }
}
